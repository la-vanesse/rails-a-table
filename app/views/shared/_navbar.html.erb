
<div class="navbar">
  <nav>
    <ul>
      <li> <%= link_to root_path do %>
        <%= image_tag "atable-logo-white.svg", class: "home-logo", alt:"home" %>
      <% end %>

      <li> <%= link_to root_path do %>
        <%= image_tag "atable-icon-set.svg", class: "navbar-icon", alt:"set" %>
      <% end %>

      <li> <%= link_to root_path do %>
        <%= image_tag "atable-icon-plate.svg", class: "navbar-icon", alt:"plates" %>
      <% end %>

      <li> <%= link_to root_path do %>
        <%= image_tag "atable-icon-fork.svg", class: "navbar-icon", alt:"forks" %>
      <% end %>

      <li>
      <%= link_to root_path do %>
        <%= image_tag "atable-icon-glass.svg", class: "navbar-icon", alt:"glasses" %>
      <% end %>
    </ul>

  </nav>

  <div class = "user-menu">
    <% if user_signed_in? %>
      <%= link_to root_path do %>
        <%= image_tag "atable-icon-upload.svg", class: "upload-icon", alt:"upload" %>
      <% end %>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-outline-secondary"  %>

    <% else %>
      <%= button_to "Sign in", new_user_session_path, class: "btn btn-warning " %>
    <% end %>
  </div>
</div>
