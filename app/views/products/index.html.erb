<div>
  <%= image_tag("products-top.jpg", class: "product-image-top", alt: "top-pic" ) %>
</div>
    <h1 class="product-headline">All our beautiful Products </h1>

  <div class="row">
    <% @products.each do |product| %>
        <div class="col-md-4">
          <div class="card" style="width: 18rem;">
            <div class="img">
              <%= cl_image_tag product.photo.key, height: 300, width: 400, crop: :fill %>
            </div>
            <div class="card-body">
              <h2><%= product.name %></h2>
              <p><%= product.description.truncate_words(7) %></p>
            </div>
            <div class="card-buttons">
              <%= link_to "More info", product_path(product), class: "btn btn-green" %>
              <% if current_user %>
                <%= link_to "Book", new_product_booking_path(product),  class: "btn btn-green" %>
              <% end %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
