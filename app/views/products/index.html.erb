<div>
  <img src="/assets/products-top.jpg" class="product-image-top" alt="top-pic" style="width:100%;">
</div>





    <h1 class="product-headline">All our beautiful Products </h1>

  <div class="row">
    <% @products.each do |product| %>
        <div class="col-md-4">
          <div class="card" style="width: 18rem;">
            <img src= "" class="card-img-top" alt=""> #to add images source(cloudinary)
            <div class="card-body">
              <h2><%= product.name %></h2>
              <p><%= product.description.truncate_words(10) %></p>
            </div>
            <div class="card-buttons">
              <%= link_to "More info", product_path(product), class: "btn btn-green" %>
              <%= link_to "Book", new_product_booking_path(product),  class: "btn btn-green" %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>
