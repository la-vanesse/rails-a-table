<div class="body">
  <div class="row">
      <div class="col-8">
        <div class="user-card">
          <h1><%= @product.name %></h1>
        </div>
        <div class="user-card">
          <p>Description : <%= @product.description %></p>
          <p>Price : <%= @product.price %></p>
          <p>Quantity available : <%= @product.quantity %></p>
          <p>Owner of product : <%= @product.user_id %></p>
          <p><%= @product.name %> is currently <%= @product.is_booked ? "booked" : "not booked" %></p>
        </div>
        <div class="card-buttons">
            <%= link_to "Update", edit_product_path(@product), class: "btn btn-green" %>
            <%= link_to "Book", new_booking_path(@product), class: "btn btn-green" %>
            <%= link_to "Leave a review", new_review_path(@product), class: "btn btn-green" %>
            <%= link_to "Delete", product_path(@product), method: :delete, data: { confirm: 'Are you sure?' },  class: "btn btn-green" %>
        </div>
      </div>
</div>
